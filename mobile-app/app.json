{
  "expo": {
    "name": "FinanceKit Mobile",
    "slug": "financekit-mobile",
    "version": "1.0.0",
    "sdkVersion": "51.0.0",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "backgroundColor": "#0f172a",
      "resizeMode": "contain"
    },
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aavash07.financekit",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow FinanceKit to use the camera to capture receipt photos",
        "NSPhotoLibraryAddUsageDescription": "Allow FinanceKit to save receipt photos",
        "NSPhotoLibraryUsageDescription": "Allow FinanceKit to pick receipt photos"
      }
    },
    "android": {
      "package": "com.aavash07.financekit",
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"],
      "splash": {
        "image": "./assets/splash.png",
        "backgroundColor": "#0f172a",
        "resizeMode": "contain"
      },
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon-foreground.png",
        "backgroundColor": "#0f172a"
      }
    }
  }
}
